<div class="row">
    <div class="col-auto">
        <h2>Welcome!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a new Blog Post:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title"/>
            </div>
            <div class="form-group">
                <label for="blog-post">blog post:</label>
                <textarea class="form-input" id="blog-post" name="blog-post"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 blog-list">
        <h3>Current Blogs:</h3>

        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>