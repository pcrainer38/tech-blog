<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>

<form class="comment">
    <div class="form-group">
        <label for="comment-content">comment:</label>
        <input class="form-input" type="text" id="comment-content" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
      {{#each comments as |comment|}}
    <div class="comment-list row mb-2">
        <h4><a href="/comment/{{comment.id}}">{{comment.content}}</a></h4>
    </div>
    <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
      {{/each}}
</form>

<script src="/js/comment.js"></script>